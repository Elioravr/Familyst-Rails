.sign-up-background
.sign-up-form.form
  .title= t("devise.sign_up_page")

  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {novalidate:""}) do |f|
    = f.error_notification

    .inputs
      = f.input :username, autofocus: true, input_html: {class: "form-control"}, label: getTranslation("username")
      = f.input :email, input_html: {class: "form-control"}, label: getTranslation("email")
      = f.input :password, input_html: {class: "form-control"}, label: getTranslation("password")
      = f.input :password_confirmation, input_html: {class: "form-control"}, label: getTranslation("password_confirmation")

    .actions
      = f.button :submit, t("sign_up"), class: "btn btn-default"
      = render :partial => "devise/shared/links"
