/ %!DOCTYPE html
%html
%head
  %title Familyst
  = include_gon
  = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
  // = stylesheet_link_tag 'application', type: "text/css", href: "http://fonts.googleapis.com/css?family=Tangerine"
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
%body
#main-controller
  - if user_signed_in?
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          = link_to "", root_path, class: "familyst-little-banner"
        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            / %li
            /   = link_to "Signed in as #{current_user.username}", ""
            %li.dropdown
              %a.dropdown-toggle{"href" => "", "data-toggle" => "dropdown", "role" => "button", "aria-expanded" => "false"}
                = "#{t('welcome')} #{current_user.username}"
                %span.caret
              %ul.dropdown-menu{role: "menu"}
                %li= link_to t("your_profile"), ""
                %li.divider
                %li= link_to t("sign_out"), destroy_user_session_path, method: "delete"
            / %li
            /   = link_to t("sign_out"), destroy_user_session_path, method: "delete"
  = yield
